{
  "name": "mkdocs-custom-theme",
  "version": "1.0.0",
  "description": "Frontend build process for MkDocs custom theme",
  "main": "index.js",
  "scripts": {
    "build:css": "NODE_ENV=production postcss frontend/src/main.css -o custom_theme/static/css/main.css",
    "dev:css": "postcss frontend/src/main.css -o custom_theme/static/css/main.css --watch",
    "build:mkdocs": "mkdocs build",
    "validate:html": "html5validator --root./site --skip-non-html --format=text",
    "minify:html": "html-minifier-terser --input-dir./site --output-dir./site --file-ext html --collapse-whitespace --remove-comments --remove-redundant-attributes",
    "build": "npm run build:css && npm run build:mkdocs && npm run validate:html && npm run minify:html"
  },
  "author": "Semen K",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "html-minifier-terser": "^7.2.0",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.3.6"
  },
  "dependencies": {
    "html5-validator": "^1.2.1"
  }
}
